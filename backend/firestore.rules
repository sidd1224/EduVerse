rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own user profile, but not others.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read courses and lessons.
    match /courses/{courseId} {
      allow read: if request.auth != null;
    }
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
    }
     match /quizzes/{quizId} {
      allow read: if request.auth != null;
    }

    // Students can create their own submissions, but cannot read submissions from others.
    match /quizSubmissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
     match /virtualLabProgress/{progressId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}